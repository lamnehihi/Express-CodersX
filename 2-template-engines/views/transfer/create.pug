extends ../layouts/common
block content
  h1 New Transfer

  form(method="post")
    input(type="hidden", name="_csrf", value=csrfToken)
    .form-group        
        label(for="accountId") Account Id
        input#id.form-control(type="text", name="accountId")

        label(for="phone") Amount
        input#amount.form-control(type="text", name="amount")

        button.btn.btn-primary.mt-2 Transfer
