extends ../layouts/common
block content
  h1 Login

  if errors
    each err in errors
      .alert.alert-danger= err
        

  form(action="/auth/login", method="post")
    .form-group        
        label(for="email") Email
        input#email.form-control(type="text", name="email", value= data ? data.email : "")

        label(for="password") Password
        input#password.form-control(type="password", name="password", value= data ? data.password : "")

        button.btn.btn-primary.mt-2 Login